@using MyProjectInMVC.Enums;
@model CategoryModel
@{
    ViewData["Title"] = "Criar nova Categoria";
}

<div class="card mt-5">
    <div class="card-body mt-1">

        <div class="text-center">
            <h1 class="mt-3">Registrar novo usuário</h1>
        </div>
        <form asp-controller="Category" asp-action="Create" method="post">
            <div class="form-group mt-4">
                <input type="text" asp-for="Name" class="form-control mt-1" placeholder="Digite o Nome">
                <p class="mt-2">@Html.ValidationMessageFor(x => x.Name)</p>
            </div>

            <div class="form-group mt-2">
                <input type="text" asp-for="Slug" class="form-control mt-1" placeholder="Digite o Slug">
                <p class="mt-2">@Html.ValidationMessageFor(x => x.Slug)</p>
            </div>

            <button type="submit" class="btn btn-primary mt-4">Adicionar</button>
            <a class="btn btn-secondary mt-4" asp-controller="User" asp-action="Index">Retornar</a>
        </form>
    </div>
</div>