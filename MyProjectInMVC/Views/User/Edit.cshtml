@using MyProjectInMVC.Enums;
@model UserModel
@{
    ViewData["Title"] = "Editar Usuário";
}

<div class="card mt-5">
    <div-- class="card-body mt-1">

        <div class="text-center">
            <h1 class="mt-3">Editar usuário</h1>
        </div>
        <form asp-controller="User" asp-action="Edit" method="post">
            <div class="form-group mt-4">
                <label for="name">Nome</label>
                <input type="text" asp-for="Name" class="form-control mt-1" placeholder="Digite o Nome">
                <p class="mt-2">@Html.ValidationMessageFor(x => x.Name)</p>
            </div>

            <div class="form-group mt-2">
                <label for="email">Email</label>
                <input type="email" asp-for="Email" class="form-control mt-1" placeholder="Digite o email">
                <p class="mt-2">@Html.ValidationMessageFor(x => x.Email)</p>
            </div>

            <div class="form-group mt-2">
                <label for="phone">Phone</label>
                <input type="text" asp-for="phoneNumber" class="form-control mt-1" placeholder="Exemplo: (00) 00000-0000">
                <p class="mt-2">@Html.ValidationMessageFor(x => x.phoneNumber)</p>
            </div>

            <div class="form-group mt-2">
                <label for="cpf">Cpf</label>
                <input type="string" asp-for="Cpf" class="form-control mt-1" placeholder="Exemplo: 000.000.000-00">
                <p class="mt-2">@Html.ValidationMessageFor(x => x.Cpf)</p>
            </div>

            <!--div>
                <label for="Password">Senha</label>
                <input type="password" asp-for="Password" class="form-control mt-1" placeholder="Digite a senha" />
                <p class="mt-2">Html.ValidationMessageFor(x => x.Password)</p>
            </div-->

            <div class="form-group mt-2">
                <label for="name" class="form-label">Cargo</label><br>
                <select asp-for="Role" class="form-select mt-1">
                    <option value="@AdmEnum.Aluno">Aluno</option>
                    <option value="@AdmEnum.Admin">Admin</option>
                    
                </select>
            </div>

            <button type="submit" class="btn btn-primary mt-4">Editar</button>
            <a class="btn btn-secondary mt-4" asp-controller="User" asp-action="Index">Retornar</a>
        </form>
    </div>
</div>